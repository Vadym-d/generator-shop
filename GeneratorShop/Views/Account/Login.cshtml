@model GeneratorShop.Models.LoginViewModel;

<link href="/css/signInForm.css" rel="stylesheet" />

<div class="container d-flex justify-content-center align-items-center" style="margin-top: 10%;">
    <div class="card">
        <div class="p-3 px-4 py-4 border-bottom">
            <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <div class="form-group">
                    <label asp-for="Email">Пошта</label>
                    <input asp-for="Email" placeholder="stepan_nepan" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Пароль</label>
                    <div class="form">
                    <input asp-for="Password" type="password" placeholder="12345678" class="form-control" />
                        <a href="#">Forgot?</a>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button class="btn btn-danger btn-block continue">Увійти</button>
            </form>

            <div class="d-flex justify-content-center align-items-center mt-3 mb-3">
                <span class="line"></span>
                <small class="px-2 line-text">або</small>
                <span class="line"></span>
            </div>
            <button class="btn btn-danger btn-block continue facebook-button d-flex justify-content-start align-items-center">
                <i class="fab fa-facebook-square ml-2"></i>
                <span class="ml-5 px-4">Продовжити через Facebook</span>
            </button>
            <button class="btn btn-danger btn-block continue google-button d-flex justify-content-start align-items-center">
                <i class="fab fa-google ml-2"></i>
                <span class="ml-5 px-4">Продовжити через Google</span>
            </button>
        </div>
        <div class="p-3 d-flex flex-row justify-content-center align-items-center member">
            <span>Ще не з нами? </span>
            <a href="/account/register" class="text-decoration-none ml-2">Реєстрація</a>
        </div>
    </div>
</div>